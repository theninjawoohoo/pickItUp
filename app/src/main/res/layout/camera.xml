<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp">

        <ImageButton
            android:id="@+id/iconMonster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_weight="0.25"
            android:contentDescription="@string/monster_button"
            app:srcCompat="@drawable/icon_monster" />

        <ImageButton
            android:id="@+id/iconLeaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_weight="0.25"
            android:contentDescription="@string/leaderboard_button"
            app:srcCompat="@drawable/icon_leaderboard" />
    </LinearLayout>

    <SurfaceView
        android:id="@+id/camerapreview"
        android:layout_width="fill_parent"
        android:layout_height="565dp" />

    <ImageButton
        android:id="@+id/take_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/take_photo"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="160dp"
        app:srcCompat="@drawable/iconCamera" />

</LinearLayout>